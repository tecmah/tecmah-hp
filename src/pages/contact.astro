---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import PageHero from "../components/PageHero.astro";

const badgeIcon = `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>`;
---

<Layout title="お問い合わせ・無料相談予約 | 株式会社TECMAH">
  <Header />
  <main>
    <PageHero
      titleHtml='<span class="gradient-text">まずは</span>お気軽に<br><span class="gradient-text">ご相談</span>ください'
      subtitleHtml="初回60分のオンライン相談は無料です。<br>お客様の課題をお聞かせください。最適な解決策をご提案します。"
      badge="お問い合わせ・無料相談"
      badgeIconHtml={badgeIcon}
    />

    <!-- Consultation Types -->
    <section class="consultation-section">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title"><span class="gradient-text">相談プラン</span></h2>
          <p class="section-subtitle">お客様のニーズに応じて2つの相談プランをご用意しています</p>
        </div>

        <div class="consultation-grid">
          <!-- Free Consultation -->
          <div class="consultation-card featured">
            <div class="card-badge">おすすめ</div>
            <div class="card-icon primary">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
            </div>
            <h3 class="card-title">無料相談</h3>
            <div class="card-price primary">無料</div>
            <p class="card-duration">60分のオンライン相談</p>

            <ul class="card-features">
              <li>
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                現状課題のヒアリング・整理
              </li>
              <li>
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                解決方向性・アプローチのご提案
              </li>
              <li>
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                概算見積もり・スケジュール感
              </li>
              <li>
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                次のステップのご提案
              </li>
            </ul>

            <p class="card-note">※ 無理な営業は一切行いません。お気軽にご相談ください。</p>

            <button class="card-btn primary" onclick="selectConsultationType('free')">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a1 1 0 011-1h6a1 1 0 011 1v4m-7 8v8m-5-4h18m-9 0V7m0 0L9 3"></path>
              </svg>
              無料相談を申し込む
            </button>
          </div>

          <!-- Premium Consultation -->
          <div class="consultation-card">
            <div class="card-icon secondary">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
            <h3 class="card-title">プレミアム相談</h3>
            <div class="card-price secondary">¥10,000</div>
            <p class="card-duration">60分の専門コンサルティング</p>

            <ul class="card-features">
              <li>
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                詳細な現状分析・課題整理
              </li>
              <li>
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                具体的なロードマップ策定
              </li>
              <li>
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                詳細見積もり・提案書作成
              </li>
              <li>
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                1週間のフォローアップ付き
              </li>
            </ul>

            <p class="card-note">※ 正式契約時には相談料を差し引かせていただきます。</p>

            <button class="card-btn secondary" onclick="selectConsultationType('premium')">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
              </svg>
              プレミアム相談を申し込む
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Form Section -->
    <section class="form-section" id="consultation-form">
      <div class="container">
        <div class="form-wrapper">
          <!-- Form Header -->
          <div class="form-header">
            <h2 class="form-title">
              <span class="gradient-text" id="form-title">無料相談お申し込み</span>
            </h2>
            <p class="form-subtitle" id="form-subtitle">
              以下のフォームにご記入ください。24時間以内にご連絡いたします。
            </p>
          </div>

          <!-- Contact Form -->
          <div class="form-card">
            <form id="contact-form" class="contact-form">
              <!-- Consultation Type (Hidden Field) -->
              <input type="hidden" id="consultation_type" name="consultation_type" value="free" />

              <!-- Basic Information -->
              <div class="form-grid">
                <div class="form-group">
                  <label for="company_name" class="form-label">
                    会社名 <span class="required">*</span>
                  </label>
                  <input
                    type="text"
                    id="company_name"
                    name="company_name"
                    required
                    class="form-input"
                    placeholder="株式会社〇〇"
                  />
                  <div class="error-message"></div>
                </div>

                <div class="form-group">
                  <label for="department" class="form-label">部署名</label>
                  <input
                    type="text"
                    id="department"
                    name="department"
                    class="form-input"
                    placeholder="開発部"
                  />
                </div>
              </div>

              <div class="form-grid">
                <div class="form-group">
                  <label for="contact_name" class="form-label">
                    お名前 <span class="required">*</span>
                  </label>
                  <input
                    type="text"
                    id="contact_name"
                    name="contact_name"
                    required
                    class="form-input"
                    placeholder="田中 太郎"
                  />
                  <div class="error-message"></div>
                </div>

                <div class="form-group">
                  <label for="position" class="form-label">役職</label>
                  <input
                    type="text"
                    id="position"
                    name="position"
                    class="form-input"
                    placeholder="マネージャー"
                  />
                </div>
              </div>

              <div class="form-grid">
                <div class="form-group">
                  <label for="email" class="form-label">
                    メールアドレス <span class="required">*</span>
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="form-input"
                    placeholder="tanaka@example.com"
                  />
                  <div class="error-message"></div>
                </div>
              </div>

              <!-- Company Information -->
              <div class="form-grid">
                <div class="form-group">
                  <label for="industry" class="form-label">
                    業界・業種 <span class="required">*</span>
                  </label>
                  <select id="industry" name="industry" required class="form-select">
                    <option value="">選択してください</option>
                    <option value="製造業">製造業</option>
                    <option value="小売・卸売業">小売・卸売業</option>
                    <option value="金融・保険業">金融・保険業</option>
                    <option value="医療・ヘルスケア">医療・ヘルスケア</option>
                    <option value="教育・研修">教育・研修</option>
                    <option value="IT・ソフトウェア">IT・ソフトウェア</option>
                    <option value="コンサルティング">コンサルティング</option>
                    <option value="メディア・広告">メディア・広告</option>
                    <option value="物流・運輸">物流・運輸</option>
                    <option value="不動産・建設">不動産・建設</option>
                    <option value="その他">その他</option>
                  </select>
                  <div class="error-message"></div>
                </div>

                <div class="form-group">
                  <label for="company_size" class="form-label">
                    従業員規模 <span class="required">*</span>
                  </label>
                  <select id="company_size" name="company_size" required class="form-select">
                    <option value="">選択してください</option>
                    <option value="スタートアップ（〜20名）">スタートアップ（〜20名）</option>
                    <option value="小規模企業（21〜100名）">小規模企業（21〜100名）</option>
                    <option value="中堅企業（101〜500名）">中堅企業（101〜500名）</option>
                    <option value="大企業（501〜1,000名）">大企業（501〜1,000名）</option>
                    <option value="大手企業（1,001名〜）">大手企業（1,001名〜）</option>
                  </select>
                  <div class="error-message"></div>
                </div>
              </div>

              <!-- Consultation Details -->
              <div class="form-group">
                <label class="form-label">
                  相談内容の分類 <span class="required">*</span>
                </label>
                <div class="checkbox-grid">
                  <label class="checkbox-card">
                    <input type="checkbox" name="consultation_category" value="AI・データ活用" />
                    <span class="checkbox-label">AI・データ活用</span>
                  </label>
                  <label class="checkbox-card">
                    <input type="checkbox" name="consultation_category" value="PdM・PM支援" />
                    <span class="checkbox-label">PdM・PM支援</span>
                  </label>
                  <label class="checkbox-card">
                    <input type="checkbox" name="consultation_category" value="DX・新規事業" />
                    <span class="checkbox-label">DX・新規事業</span>
                  </label>
                </div>
                <div class="error-message"></div>
              </div>

              <div class="form-group">
                <label for="budget_range" class="form-label">
                  予算規模 <span class="required">*</span>
                </label>
                <select id="budget_range" name="budget_range" required class="form-select">
                  <option value="">選択してください</option>
                  <option value="100万円未満">100万円未満</option>
                  <option value="100万円〜300万円">100万円〜300万円</option>
                  <option value="300万円〜500万円">300万円〜500万円</option>
                  <option value="500万円〜1,000万円">500万円〜1,000万円</option>
                  <option value="1,000万円以上">1,000万円以上</option>
                  <option value="未定・相談したい">未定・相談したい</option>
                </select>
                <div class="error-message"></div>
              </div>

              <div class="form-group">
                <label for="timeline" class="form-label">希望開始時期</label>
                <select id="timeline" name="timeline" class="form-select">
                  <option value="">選択してください</option>
                  <option value="できるだけ早く">できるだけ早く</option>
                  <option value="1ヶ月以内">1ヶ月以内</option>
                  <option value="3ヶ月以内">3ヶ月以内</option>
                  <option value="6ヶ月以内">6ヶ月以内</option>
                  <option value="時期は柔軟に対応可能">時期は柔軟に対応可能</option>
                  <option value="情報収集段階">情報収集段階</option>
                </select>
              </div>

              <!-- Message -->
              <div class="form-group">
                <label for="message" class="form-label">
                  相談内容・課題について <span class="required">*</span>
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="6"
                  required
                  class="form-textarea"
                  placeholder="現在抱えている課題や相談したい内容を具体的にお聞かせください。
例：
・既存システムへのAI機能追加を検討している
・新規事業のPdM体制構築について相談したい
・データ活用による業務効率化を進めたい"
                ></textarea>
                <div class="char-count">
                  <span id="char-count">0</span>/1000文字
                </div>
                <div class="error-message"></div>
              </div>

              <!-- Preferred Meeting -->
              <div class="form-group">
                <label class="form-label">希望する相談方法</label>
                <div class="radio-grid">
                  <label class="radio-card">
                    <input type="radio" name="preferred_meeting" value="オンライン会議（Google Meet）" checked />
                    <div class="radio-content">
                      <div class="radio-title">オンライン会議</div>
                      <div class="radio-desc">Google Meet / Zoom</div>
                    </div>
                  </label>
                </div>
              </div>

              <!-- Privacy Policy -->
              <div class="privacy-box">
                <label class="privacy-label">
                  <input type="checkbox" id="privacy_agreement" name="privacy_agreement" required />
                  <span>
                    <a href="/privacy" class="privacy-link">プライバシーポリシー</a>に同意します
                    <span class="required">*</span>
                  </span>
                </label>
                <div class="error-message"></div>
              </div>

              <!-- Submit Button -->
              <div class="form-submit">
                <button type="submit" id="submit-btn" class="submit-btn">
                  <span id="submit-text">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                    </svg>
                    相談を申し込む
                  </span>
                  <span id="submit-loading" class="hidden">
                    <svg class="spinner" fill="none" viewBox="0 0 24 24">
                      <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                      <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                    送信中...
                  </span>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>

    <!-- Company Information -->
    <section class="info-section">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title"><span class="gradient-text">会社情報</span></h2>
        </div>

        <div class="info-grid">
          <!-- Address -->
          <div class="info-card">
            <div class="info-icon">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <h3 class="info-title">所在地</h3>
            <p class="info-text">
              〒060-0062<br />
              北海道札幌市中央区<br />
              南二条西5丁目31-1<br />
              RMBld.701
            </p>
          </div>

          <!-- Email -->
          <div class="info-card">
            <div class="info-icon">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="info-title">メール</h3>
            <p class="info-text">
              <a href="mailto:info@tecmah.com" class="info-link">info@tecmah.com</a>
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Thank You Modal -->
    <div id="thank-you-modal" class="modal hidden">
      <div class="modal-content">
        <div class="modal-icon">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="modal-title">送信完了</h3>
        <p class="modal-text">
          お申し込みありがとうございます。<br />
          24時間以内にご連絡いたします。
        </p>
        <button onclick="closeThankYouModal()" class="modal-btn">閉じる</button>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<script is:inline>
  // Consultation type selection
  function selectConsultationType(type) {
    const form = document.getElementById("consultation-form");
    const formTitle = document.getElementById("form-title");
    const formSubtitle = document.getElementById("form-subtitle");
    const consultationTypeInput = document.getElementById("consultation_type");

    if (consultationTypeInput) {
      consultationTypeInput.value = type;
    }

    if (type === "premium") {
      if (formTitle) formTitle.textContent = "プレミアム相談お申し込み";
      if (formSubtitle)
        formSubtitle.textContent =
          "以下のフォームにご記入ください。お支払い方法については後日ご連絡いたします。";
    } else {
      if (formTitle) formTitle.textContent = "無料相談お申し込み";
      if (formSubtitle)
        formSubtitle.textContent =
          "以下のフォームにご記入ください。24時間以内にご連絡いたします。";
    }

    // Scroll to form
    if (form) {
      form.scrollIntoView({ behavior: "smooth" });
    }
  }

  // Character count for message textarea
  document.addEventListener("DOMContentLoaded", function () {
    const messageTextarea = document.getElementById("message");
    const charCount = document.getElementById("char-count");

    if (messageTextarea && charCount) {
      messageTextarea.addEventListener("input", function () {
        const count = this.value.length;
        charCount.textContent = count;

        if (count > 1000) {
          charCount.style.color = "var(--accent)";
        } else {
          charCount.style.color = "var(--text-muted)";
        }
      });
    }
  });

  // Form validation
  function validateForm() {
    const form = document.getElementById("contact-form");
    if (!form) return false;

    const requiredFields = form.querySelectorAll("[required]");
    let isValid = true;

    // Clear previous errors
    const errorMessages = form.querySelectorAll(".error-message");
    errorMessages.forEach((error) => {
      error.classList.remove("show");
      error.textContent = "";
    });

    // Validate required fields
    requiredFields.forEach((field) => {
      const errorDiv = field.parentElement?.querySelector(".error-message");

      if (!field.value.trim()) {
        if (errorDiv) {
          errorDiv.textContent = "この項目は必須です";
          errorDiv.classList.add("show");
        }
        field.classList.add("error");
        isValid = false;
      } else {
        field.classList.remove("error");
      }
    });

    // Validate email format
    const email = document.getElementById("email");
    if (
      email &&
      email.value &&
      !/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email.value)
    ) {
      const errorDiv = email.parentElement?.querySelector(".error-message");
      if (errorDiv) {
        errorDiv.textContent = "正しいメールアドレスを入力してください";
        errorDiv.classList.add("show");
      }
      email.classList.add("error");
      isValid = false;
    }

    // Validate consultation categories
    const categories = document.querySelectorAll(
      'input[name="consultation_category"]:checked'
    );
    if (categories.length === 0) {
      const categoryInput = document.querySelector(
        'input[name="consultation_category"]'
      );
      const categoryDiv = categoryInput?.closest(".form-group")?.querySelector(".error-message");
      if (categoryDiv) {
        categoryDiv.textContent = "相談内容を1つ以上選択してください";
        categoryDiv.classList.add("show");
      }
      isValid = false;
    }

    return isValid;
  }

  // Form submission to Google Forms
  document.addEventListener("DOMContentLoaded", function () {
    const form = document.getElementById("contact-form");
    if (!form) return;

    form.addEventListener("submit", function (e) {
      e.preventDefault();

      if (!validateForm()) {
        return;
      }

      const submitBtn = document.getElementById("submit-btn");
      const submitText = document.getElementById("submit-text");
      const submitLoading = document.getElementById("submit-loading");

      // Show loading state
      if (submitText) submitText.classList.add("hidden");
      if (submitLoading) submitLoading.classList.remove("hidden");
      if (submitBtn) submitBtn.disabled = true;

      // Get form data
      const formData = new FormData(this);

      // Map form fields to Google Forms entry IDs
      const googleFormData = new FormData();

      // Basic information
      googleFormData.append(
        "entry.613070658",
        formData.get("company_name") || ""
      );
      googleFormData.append(
        "entry.2116052852",
