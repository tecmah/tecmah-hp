              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            導入事例・成功事例
          </div>
          <h1 class="text-5xl md:text-7xl font-bold mb-6 leading-tight">
            <span class="gradient-text">実績</span>が<br>
            <span class="gradient-text">証明</span>する価値
          </h1>
          <p class="text-xl md:text-2xl text-gray-300 mb-8 leading-relaxed">
            様々な業界・規模の企業様でのAI・データ活用、<br>
            プロダクトマネジメント支援の成功事例をご紹介します。
          </p>
        </div>
      </div>
    </section>

    <!-- Filter & Stats -->
    <section class="bg-zinc-900 py-12">
      <div class="container">
        <div class="flex flex-wrap items-center justify-between gap-4">
          <!-- Filter -->
          <div class="flex items-center space-x-4">
            <span class="text-white font-semibold">業界絞り込み:</span>
            <div class="flex flex-wrap gap-2">
              <button class="filter-btn active" data-filter="all">
                すべて
              </button>
              {industries.map(industry => (
                <button class="filter-btn" data-filter={industry}>
                  {industry}
                </button>
              ))}
            </div>
          </div>

          <!-- Stats -->
          <div class="flex items-center space-x-6 text-center">
            <div>
              <div class="text-2xl font-bold text-green-400">{caseStudies.length}+</div>
              <div class="text-sm text-gray-400">支援実績</div>
            </div>
            <div>
              <div class="text-2xl font-bold text-green-400">95%</div>
              <div class="text-sm text-gray-400">満足度</div>
            </div>
            <div>
              <div class="text-2xl font-bold text-green-400">6ヶ月</div>
              <div class="text-sm text-gray-400">平均導入期間</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Case Studies Grid -->
    <section class="bg-zinc-800 py-20">
      <div class="container">
        <div class="grid lg:grid-cols-2 gap-8" id="case-studies-grid">
          
          {caseStudies.map((study) => (
            <article class="case-study-card bg-zinc-900 rounded-2xl overflow-hidden border border-zinc-700 hover:border-zinc-600 transition-all duration-300 group" data-industry={study.industry}>
              
              <!-- Image -->
              <div class="aspect-video bg-gradient-to-br from-blue-500/20 to-purple-500/20 relative overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-br from-transparent to-black/60"></div>
                <div class="absolute bottom-6 left-6 right-6">
                  <div class="flex flex-wrap gap-2 mb-3">
                    {study.tags.map(tag => (
                      <span class="bg-green-500/20 text-green-400 px-3 py-1 rounded-full text-sm font-medium">
                        {tag}
                      </span>
                    ))}
                  </div>
                  <h3 class="text-2xl font-bold text-white mb-1">{study.title}</h3>
                  <p class="text-gray-300">{study.subtitle}</p>
                </div>
              </div>

              <!-- Content -->
              <div class="p-8">
                <p class="text-gray-300 mb-6 leading-relaxed">{study.overview}</p>

                <!-- Key Results -->
                <div class="grid grid-cols-3 gap-4 mb-6">
                  {study.results.slice(0, 3).map(result => (
                    <div class="text-center">
                      <div class="text-xl font-bold text-green-400">{result.value}</div>
                      <div class="text-sm text-gray-400">{result.metric}</div>
                    </div>
