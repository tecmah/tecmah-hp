    background: rgba(99, 91, 255, 0.02);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-badge {
    display: inline-block;
    padding: 0.5rem 1.25rem;
    background: rgba(99, 91, 255, 0.1);
    border: 1px solid rgba(99, 91, 255, 0.3);
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--secondary);
    margin-bottom: 1.5rem;
  }

  .section-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 800;
    color: var(--text);
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .section-description {
    font-size: 1.125rem;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.7;
  }

  .gradient-text {
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Scroll Animations */
  .scroll-fade-in {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeIn 0.8s ease forwards;
  }

  .scroll-fade-up {
    opacity: 0;
    transform: translateY(40px);
    animation: fadeUp 0.8s ease forwards;
    animation-delay: var(--delay, 0s);
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Pillars Grid */
  .pillars-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .pillar-card {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 1rem;
    padding: 2rem;
    text-align: center;
    transition: all 0.3s ease;
  }

  .pillar-card:hover {
    transform: translateY(-8px);
    border-color: var(--primary);
    box-shadow: 0 20px 40px rgba(99, 91, 255, 0.15);
  }

  .pillar-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .pillar-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text);
    margin-bottom: 0.75rem;
  }

  .pillar-description {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.7;
    margin: 0;
  }

  /* Timeline */
  .timeline {
    max-width: 800px;
    margin: 0 auto;
  }

  .timeline-item {
    display: flex;
    gap: 2rem;
    position: relative;
  }

  .timeline-marker {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex-shrink: 0;
  }

  .marker-dot {
    width: 16px;
    height: 16px;
    border-radius: 50%;
    background: var(--surface);
    border: 3px solid var(--border);
    transition: all 0.3s ease;
    z-index: 1;
  }

  .timeline-item.major .marker-dot {
    width: 20px;
    height: 20px;
    background: var(--primary);
    border-color: var(--primary);
    box-shadow: 0 0 20px rgba(99, 91, 255, 0.5);
  }

  .timeline-item:hover .marker-dot {
    transform: scale(1.2);
    border-color: var(--primary);
  }

  .marker-line {
    width: 2px;
    flex-grow: 1;
    background: var(--border);
    min-height: 30px;
  }

  .timeline-content {
    flex: 1;
    padding-bottom: 2.5rem;
  }

  .timeline-date {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .timeline-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--text);
    margin: 0.5rem 0;
  }

  .timeline-description {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0;
  }

  /* Financial Sections */
  .financial-sections {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .financial-section {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 1rem;
    padding: 1.5rem;
  }

  .financial-section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.25rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--border);
  }

  .financial-section-header h3 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-secondary);
    margin: 0;
  }

  .financial-section-value {
    font-size: 1.25rem;
    font-weight: 800;
    color: var(--text);
  }

  .financial-section-value .note {
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--text-muted);
    margin-left: 0.25rem;
  }

  .financial-breakdown {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .breakdown-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .breakdown-label {
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  .breakdown-value {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text);
  }

  .breakdown-note {
    font-size: 0.75rem;
    color: var(--text-muted);
    width: 100%;
    text-align: right;
  }

  .breakdown-total {
    display: flex;
    justify-content: space-between;
    padding-top: 0.75rem;
    margin-top: 0.75rem;
    border-top: 1px solid var(--border);
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text);
  }

  .financial-forecast {
    margin-top: 1rem;
  }

  .forecast-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem;
    background: rgba(99, 91, 255, 0.05);
    border-radius: 0.5rem;
  }

  .forecast-label {
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  .forecast-value {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--primary);
  }

  .forecast-note {
    font-size: 0.75rem;
    color: var(--text-muted);
    margin: 0.5rem 0 0;
  }

  .financial-note {
    background: rgba(99, 91, 255, 0.05);
    border-left: 4px solid var(--primary);
    padding: 1.5rem;
    border-radius: 0 0.75rem 0.75rem 0;
  }

  .financial-note h4 {
    font-size: 1rem;
    font-weight: 700;
    color: var(--text);
    margin: 0 0 0.75rem;
  }

  .financial-note p {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.7;
    margin: 0;
  }

  .financial-note strong {
    color: var(--primary);
  }

  /* Project Card */
  .project-card {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 1rem;
    overflow: hidden;
    max-width: 800px;
    margin: 0 auto;
  }

  .project-header {
    background: linear-gradient(135deg, rgba(99, 91, 255, 0.1), rgba(0, 212, 170, 0.05));
    padding: 1.5rem 2rem;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .project-badge {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--primary);
    background: rgba(99, 91, 255, 0.2);
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .project-name {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text);
    margin: 0;
  }

  .project-content {
    padding: 2rem;
  }

  .project-info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .info-item {
    display: flex;
    gap: 1rem;
  }

  .info-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text-secondary);
    min-width: 100px;
  }

  .info-value {
    font-size: 0.9375rem;
    color: var(--text);
    line-height: 1.5;
  }

  .project-workload h4 {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text-secondary);
    margin: 0 0 1rem;
  }

  .workload-items {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .workload-item {
    background: rgba(99, 91, 255, 0.05);
    border: 1px solid var(--border);
    border-radius: 0.5rem;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    min-width: 150px;
  }

  .workload-month {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--text-secondary);
    text-transform: uppercase;
  }

  .workload-hours {
    font-size: 1.25rem;
    font-weight: 800;
    color: var(--text);
  }

  .workload-note {
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  /* Targets Overview */
  .targets-overview {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .target-card {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 1rem;
    padding: 2rem;
    text-align: center;
    transition: all 0.3s ease;
  }

  .target-card:hover {
    transform: translateY(-4px);
    border-color: var(--primary);
  }

  .target-card.primary {
    background: linear-gradient(135deg, rgba(99, 91, 255, 0.1), rgba(0, 212, 170, 0.05));
    border-color: var(--primary);
  }

  .target-label {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
  }

  .target-value {
    font-size: 2rem;
    font-weight: 800;
    color: var(--text);
    margin-bottom: 0.25rem;
  }

  .target-card.primary .target-value {
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .target-sub {
    font-size: 0.875rem;
    color: var(--text-muted);
  }

  /* Quarterly Targets */
  .quarterly-targets h3 {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--text);
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .quarterly-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  .quarterly-item {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 0.75rem;
    padding: 1.25rem;
  }

  .quarterly-header {
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--primary);
    margin-bottom: 1rem;
  }

  .quarterly-values {
    display: flex;
    gap: 1rem;
    margin-bottom: 0.75rem;
  }

  .quarterly-value {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .quarterly-value .label {
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  .quarterly-value .value {
    font-size: 1rem;
    font-weight: 700;
    color: var(--text);
  }

  .quarterly-note {
    font-size: 0.75rem;
    color: var(--text-secondary);
    line-height: 1.5;
    margin: 0;
  }

  /* Time Allocation */
  .allocation-chart {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 3rem;
    align-items: center;
  }

  .allocation-visual {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .allocation-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.5rem;
    background: rgba(99, 91, 255, 0.05);
    border-left: 4px solid var(--color);
    border-radius: 0 0.5rem 0.5rem 0;
  }

  .bar-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text);
  }

  .bar-value {
    font-size: 1.125rem;
    font-weight: 800;
    color: var(--text);
  }

  .allocation-details {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .allocation-item {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .allocation-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .allocation-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .allocation-name {
    font-size: 1rem;
    font-weight: 700;
    color: var(--text);
  }

  .allocation-hours {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--primary);
    margin-left: auto;
  }

  .allocation-description {
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin: 0;
    padding-left: 1.5rem;
  }

  .allocation-rules {
    margin-top: 3rem;
    background: rgba(99, 91, 255, 0.05);
    border: 1px solid var(--border);
    border-radius: 1rem;
    padding: 1.5rem 2rem;
  }

  .allocation-rules h4 {
    font-size: 1rem;
    font-weight: 700;
    color: var(--text);
    margin: 0 0 1rem;
  }

  .allocation-rules ul {
    margin: 0;
    padding-left: 1.25rem;
  }

  .allocation-rules li {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: 0.5rem;
  }

  .allocation-rules li:last-child {
    margin-bottom: 0;
  }

  /* Strategy Section */
  .section-strategy {
    background: linear-gradient(135deg, var(--surface-dark) 0%, var(--background) 100%);
    padding: 8rem 0;
    position: relative;
    overflow: hidden;
  }

  .strategy-bg {
    position: absolute;
    inset: 0;
    background: 
      radial-gradient(ellipse 80% 50% at 50% 0%, rgba(99, 91, 255, 0.15), transparent),
      radial-gradient(ellipse 60% 40% at 100% 50%, rgba(0, 212, 170, 0.1), transparent);
    pointer-events: none;
  }

  .vision-statement {
    text-align: center;
    margin-bottom: 4rem;
  }

  .vision-statement blockquote {
    font-size: clamp(1.25rem, 2.5vw, 1.75rem);
    font-weight: 600;
    color: var(--text);
    line-height: 1.5;
    margin: 0;
    padding: 2rem;
    background: rgba(99, 91, 255, 0.05);
    border: 1px solid var(--border);
    border-radius: 1rem;
    display: inline-block;
  }

  .strategy-phases {
    display: grid;
    gap: 2rem;
  }

  .strategy-phase {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 1rem;
    padding: 2rem;
    transition: all 0.3s ease;
  }

  .strategy-phase:hover {
    transform: translateX(8px);
    border-color: var(--primary);
  }

  .strategy-phase.current {
    border-color: var(--primary);
    box-shadow: 0 0 30px rgba(99, 91, 255, 0.1);
  }

  .phase-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .phase-badge {
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--primary);
    background: rgba(99, 91, 255, 0.1);
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .phase-period {
    font-size: 0.875rem;
    color: var(--text-muted);
  }

  .phase-current {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--accent);
    background: rgba(0, 212, 170, 0.1);
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
  }

  .phase-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text);
    margin: 0 0 1.5rem;
  }

  .strategy-phase.current .phase-title {
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .phase-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 2rem;
    margin-bottom: 1.5rem;
  }

  .phase-initiatives h4,
  .phase-kpis h4 {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0 0 0.75rem;
  }

  .phase-initiatives ul {
    margin: 0;
    padding-left: 1.25rem;
  }

  .phase-initiatives li {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 0.5rem;
  }

  .kpi-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .kpi-tag {
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--text-muted);
    background: rgba(99, 91, 255, 0.05);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }

  .phase-why-win {
    background: rgba(0, 212, 170, 0.05);
    border-radius: 0.5rem;
    padding: 1rem;
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .why-win-label {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--accent);
    background: rgba(0, 212, 170, 0.15);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    flex-shrink: 0;
  }

  .phase-why-win p {
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin: 0;
    line-height: 1.5;
  }

  /* Scenarios Table */
  .scenarios-table {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 1rem;
    overflow: hidden;
    max-width: 800px;
    margin: 0 auto;
  }

  .scenarios-header {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    background: rgba(99, 91, 255, 0.05);
    border-bottom: 1px solid var(--border);
  }

  .scenarios-row {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    border-bottom: 1px solid var(--border);
  }

  .scenarios-row:last-child {
    border-bottom: none;
  }

  .scenario-col {
    padding: 1rem 1.5rem;
    font-size: 0.9375rem;
    color: var(--text-secondary);
    text-align: center;
  }

  .scenarios-header .scenario-col {
    font-weight: 700;
    color: var(--text);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .scenario-col.year {
    font-weight: 700;
    color: var(--text);
  }

  .scenario-col.base {
    font-weight: 600;
    color: var(--primary);
  }

  /* Challenges Grid */
  .challenges-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .challenge-card {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 1rem;
    padding: 2rem;
    transition: all 0.3s ease;
  }

  .challenge-card:hover {
    transform: translateY(-4px);
    border-color: var(--primary);
  }

  .challenge-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .challenge-icon {
    font-size: 1.5rem;
  }

  .challenge-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--text);
    margin: 0;
  }

  .challenge-description {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.7;
    margin: 0 0 1.5rem;
  }

  .challenge-solution {
    background: rgba(0, 212, 170, 0.05);
    border-radius: 0.75rem;
    padding: 1.25rem;
  }

  .solution-label {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--accent);
    display: block;
    margin-bottom: 0.5rem;
  }

  .challenge-solution p {
    font-size: 0.875rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0;
  }

  /* Related Links */
  .related-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 700px;
    margin: 0 auto;
  }

  .related-link {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding: 1.5rem 2rem;
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 1rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .related-link:hover {
    transform: translateX(8px);
    border-color: var(--primary);
    box-shadow: 0 10px 30px rgba(99, 91, 255, 0.1);
  }

  .related-icon {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(99, 91, 255, 0.1);
    border-radius: 12px;
    color: var(--primary);
  }

  .related-icon :global(svg) {
    width: 24px;
    height: 24px;
  }

  .related-content {
    flex: 1;
