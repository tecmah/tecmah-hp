---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import PageHero from "../../components/PageHero.astro";
import CTASection from "../../components/CTASection.astro";

const badgeIcon = `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path></svg>`;

const service = {
  title: "PdM/PM伴走・プロダクトマネジメント",
  lead: "事業戦略とユーザー価値を軸に、プロダクトのグロースと組織の自走化を支援します。",
  description:
    "PdM/PMの不足を解消し、仮説検証からロードマップ、開発体制のマネジメントまで一貫して伴走します。",
  features: [
    { title: "顧客課題・市場リサーチ", detail: "価値仮説の整理とユーザーインタビューによる検証" },
    { title: "プロダクト戦略・ロードマップ", detail: "策定から優先順位付けまでハンズオンで支援" },
    { title: "スクラム導入・チームマネジメント", detail: "開発チームへの伴走と生産性向上" },
    { title: "PdM/PM人材育成", detail: "ナレッジ定着と組織の自走化支援" }
  ],
  process: [
    {
      step: 1,
      title: "現状診断・課題構造化",
      detail: "顧客・組織・プロダクトの観点から課題を棚卸しし、短期と中長期で解くべきテーマを言語化します。",
      icon: `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>`
    },
    {
      step: 2,
      title: "戦略・体制設計",
      detail: "提供価値、ロードマップ、KPIを再定義し、実現のためのチーム体制・役割・意思決定プロセスを整備します。",
      icon: `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2"></path></svg>`
    },
    {
      step: 3,
      title: "伴走・定着支援",
      detail: "スクラムイベントや開発計画のファシリテーション、ナレッジ移管を行い、自走できる体制への転換を支援します。",
      icon: `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>`
    }
  ],
  outcomes: [
    { metric: "生産性向上", value: "40%+", label: "開発チーム" },
    { metric: "支援実績", value: "15社+", label: "スタートアップ〜大手" },
    { metric: "自走化達成", value: "6ヶ月", label: "平均期間" }
  ]
};
---

<Layout title={`${service.title} | 株式会社TECMAH`}>
  <Header />
  <main>
    <PageHero
      titleHtml='<span class="gradient-text">プロダクト</span>の<br><span class="gradient-text">成長</span>と自走化を'
      subtitleHtml={`${service.lead}<br>${service.description}`}
      badge="Product Management"
      badgeIconHtml={badgeIcon}
    />

    <!-- Service Overview -->
    <section class="service-section">
      <div class="container">
        <div class="overview-grid">
          <div class="overview-content">
            <h2 class="section-title">サービス概要</h2>
            <p class="section-text">
              プロダクトの成長段階に合わせて、戦略、オペレーション、チームの整備を同時に進めます。
              短期的な成果に加え、組織の意思決定力と学習サイクルを内部に根付かせることを重視しています。
            </p>
            <div class="cta-buttons">
              <a href="/contact" class="btn-inline-primary">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                無料相談を予約
              </a>
              <a href="/case-studies" class="btn-inline-secondary">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                事例を見る
              </a>
            </div>
          </div>
          <div class="features-card">
            <h3 class="features-title">主な支援内容</h3>
            <ul class="features-list">
              {service.features.map((feature) => (
                <li class="feature-item">
                  <div class="feature-check">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                  </div>
                  <div class="feature-content">
                    <div class="feature-title">{feature.title}</div>
                    <div class="feature-detail">{feature.detail}</div>
                  </div>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Outcomes -->
    <section class="outcomes-section">
      <div class="container">
        <div class="outcomes-grid">
          {service.outcomes.map((outcome) => (
            <div class="outcome-card">
              <div class="outcome-value">{outcome.value}</div>
              <div class="outcome-metric">{outcome.metric}</div>
              <div class="outcome-label">{outcome.label}</div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Process -->
    <section class="service-section bg-surface">
      <div class="container">
        <div class="section-header-center">
          <h2 class="section-title"><span class="gradient-text">伴走</span>の進め方</h2>
          <p class="section-subtitle">組織の自走化を見据えた段階的なアプローチ</p>
        </div>

        <div class="process-grid">
          {service.process.map((step) => (
            <div class="process-card">
              <div class="process-step">STEP {step.step}</div>
              <div class="process-icon" set:html={step.icon} />
              <h3 class="process-title">{step.title}</h3>
              <p class="process-detail">{step.detail}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <CTASection
      titleHtml="プロダクトの成長課題<br>まずはご相談ください"
      subtitleHtml="スタートアップからエンタープライズまで、状況に応じた支援プランをご提案します。"
      primaryText="無料相談を予約する"
      primaryHref="/contact"
      secondaryText="他のサービスを見る"
      secondaryHref="/services"
    />
  </main>
  <Footer />
</Layout>
