---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import PageHero from "../../components/PageHero.astro";
import CTASection from "../../components/CTASection.astro";

const badgeIcon = `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path></svg>`;

const service = {
  title: "新規事業・DXコンサルティング",
  lead: "顧客価値の探索から事業運営まで、継続的に成長するDX/新規事業を共創します。",
  description:
    "市場調査・事業計画・KPI設計・オペレーション整備まで一気通貫で支援し、組織に合った変革の進め方を設計します。",
  features: [
    { title: "顧客課題の洞察", detail: "価値提案の検証とユーザーリサーチ" },
    { title: "事業計画・収益モデル", detail: "策定からKPI設計まで一貫サポート" },
    { title: "業務プロセス可視化", detail: "改善計画の策定と実行支援" },
    { title: "パートナー連携戦略", detail: "アライアンス戦略の設計と交渉支援" }
  ],
  process: [
    {
      step: 1,
      title: "現状把握・ビジョン定義",
      detail: "市場環境と組織の強みを棚卸し、目指す姿と成功指標を共通認識として定義します。",
      icon: `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path></svg>`
    },
    {
      step: 2,
      title: "検証・計画立案",
      detail: "顧客インタビューやデータ分析を通して仮説検証を実施し、プロトタイプやロードマップを策定します。",
      icon: `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path></svg>`
    },
    {
      step: 3,
      title: "実行支援・ガバナンス設計",
      detail: "運用プロセス、KPIモニタリング、改善サイクルを構築し、組織内にノウハウを定着させます。",
      icon: `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>`
    }
  ],
  outcomes: [
    { metric: "事業計画策定", value: "20件+", label: "支援実績" },
    { metric: "収益化達成率", value: "85%", label: "PoC→本番" },
    { metric: "ROI改善", value: "150%+", label: "平均実績" }
  ]
};
---

<Layout title={`${service.title} | 株式会社TECMAH`}>
  <Header />
  <main>
    <PageHero
      titleHtml='<span class="gradient-text">DX</span>と<br><span class="gradient-text">新規事業</span>を共創'
      subtitleHtml={`${service.lead}<br>${service.description}`}
      badge="DX Consulting"
      badgeIconHtml={badgeIcon}
    />

    <!-- Service Overview -->
    <section class="service-section">
      <div class="container">
        <div class="overview-grid">
          <div class="overview-content">
            <h2 class="section-title">サービス概要</h2>
            <p class="section-text">
              新規事業やDXの推進は、顧客理解・収益モデル・オペレーション構築を同時に進める必要があります。
              TECMAHは探索から実行まで一貫して伴走し、再現性のある成長プロセスをともに設計します。
            </p>
            <div class="cta-buttons">
              <a href="/contact" class="btn-inline-primary">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                無料相談を予約
              </a>
              <a href="/case-studies" class="btn-inline-secondary">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                実績を見る
              </a>
            </div>
          </div>
          <div class="features-card">
            <h3 class="features-title">主な支援内容</h3>
            <ul class="features-list">
              {service.features.map((feature) => (
                <li class="feature-item">
                  <div class="feature-check">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                  </div>
                  <div class="feature-content">
                    <div class="feature-title">{feature.title}</div>
                    <div class="feature-detail">{feature.detail}</div>
                  </div>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Outcomes -->
    <section class="outcomes-section">
      <div class="container">
        <div class="outcomes-grid">
          {service.outcomes.map((outcome) => (
            <div class="outcome-card">
              <div class="outcome-value">{outcome.value}</div>
              <div class="outcome-metric">{outcome.metric}</div>
              <div class="outcome-label">{outcome.label}</div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Process -->
    <section class="service-section bg-surface">
      <div class="container">
        <div class="section-header-center">
          <h2 class="section-title"><span class="gradient-text">プロジェクト</span>の流れ</h2>
          <p class="section-subtitle">探索から実行まで一貫した支援体制</p>
        </div>

        <div class="process-grid">
          {service.process.map((step) => (
            <div class="process-card">
              <div class="process-step">STEP {step.step}</div>
              <div class="process-icon" set:html={step.icon} />
              <h3 class="process-title">{step.title}</h3>
              <p class="process-detail">{step.detail}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <CTASection
      titleHtml="DX推進のお悩みは<br>お気軽にご相談ください"
      subtitleHtml="初回ヒアリングで現状とゴールを伺い、最適な進め方をご提案します。"
      primaryText="無料相談を予約する"
      primaryHref="/contact"
      secondaryText="他のサービスを見る"
      secondaryHref="/services"
    />
  </main>
  <Footer />
</Layout>
