---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import PageHero from "../../components/PageHero.astro";
import CTASection from "../../components/CTASection.astro";

const badgeIcon = `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path></svg>`;

const service = {
  title: "生成AI・データ活用支援",
  lead: "生成AIとデータ分析で、事業の意思決定と価値創出を加速させます。",
  description:
    "構想整理からPoC、本番運用まで伴走し、ビジネスゴールに直結するアウトカムを設計・実装します。",
  features: [
    { title: "生成AI活用領域の探索", detail: "ユースケース選定と優先順位付けを行い、価値創出の可能性を明確化" },
    { title: "技術選定とプロトタイプ", detail: "Azure OpenAI / GPT-4o 等の技術選定と検証環境の構築" },
    { title: "運用ガバナンス整備", detail: "MLOps 体制の整備とチームへの定着支援" }
  ],
  process: [
    {
      step: 1,
      title: "構想・要件整理",
      detail: "現状課題と価値仮説を整理し、優先度の高いユースケースとKPIを定義します。",
      icon: `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path></svg>`
    },
    {
      step: 2,
      title: "PoC・プロトタイプ",
      detail: "短期で検証可能なスコープに分解し、仮説検証を回しながら検証環境を構築します。",
      icon: `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path></svg>`
    },
    {
      step: 3,
      title: "運用設計・内製化",
      detail: "ガバナンス、モニタリング、改善プロセスを整理し、チームが自走できる体制を整えます。",
      icon: `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>`
    }
  ],
  outcomes: [
    { metric: "PoC成功率", value: "92%", label: "検証プロジェクト" },
    { metric: "導入期間", value: "3ヶ月〜", label: "本番運用まで" },
    { metric: "ROI改善", value: "200%+", label: "平均投資回収率" }
  ]
};
---

<Layout title={`${service.title} | 株式会社TECMAH`}>
  <Header />
  <main>
    <PageHero
      title={`<span class="gradient-text">生成AI</span>と<br><span class="gradient-text">データ</span>で加速する`}
      subtitle={`${service.lead}<br>${service.description}`}
      badge="AI / Data Enablement"
      badgeIcon={badgeIcon}
    />

    <!-- Service Overview -->
    <section class="service-section">
      <div class="container">
        <div class="overview-grid">
          <div class="overview-content">
            <h2 class="section-title">サービス概要</h2>
            <p class="section-text">
              生成AIの活用に必要な課題定義、データ基盤、技術選定、運用プロセスまでをワンストップで支援します。
              事業ゴールに合わせて段階的に導入し、リスク管理とガバナンスを担保した上で成果創出につなげます。
            </p>
            <div class="cta-buttons">
              <a href="/contact" class="btn-inline-primary">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                無料相談を予約
              </a>
              <a href="/case-studies" class="btn-inline-secondary">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                取り組み事例を見る
              </a>
            </div>
          </div>
          <div class="features-card">
            <h3 class="features-title">主な支援内容</h3>
            <ul class="features-list">
              {service.features.map((feature) => (
                <li class="feature-item">
                  <div class="feature-check">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                  </div>
                  <div class="feature-content">
                    <div class="feature-title">{feature.title}</div>
                    <div class="feature-detail">{feature.detail}</div>
                  </div>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Outcomes -->
    <section class="outcomes-section">
      <div class="container">
        <div class="outcomes-grid">
          {service.outcomes.map((outcome) => (
            <div class="outcome-card">
              <div class="outcome-value">{outcome.value}</div>
              <div class="outcome-metric">{outcome.metric}</div>
              <div class="outcome-label">{outcome.label}</div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Process -->
    <section class="service-section bg-surface">
      <div class="container">
        <div class="section-header-center">
          <h2 class="section-title"><span class="gradient-text">進め方</span>の一例</h2>
          <p class="section-subtitle">段階的なアプローチで確実に成果を創出します</p>
        </div>

        <div class="process-grid">
          {service.process.map((step) => (
            <div class="process-card">
              <div class="process-step">STEP {step.step}</div>
              <div class="process-icon" set:html={step.icon} />
              <h3 class="process-title">{step.title}</h3>
              <p class="process-detail">{step.detail}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <CTASection
      title="生成AIの構想から運用まで<br>お気軽にご相談ください"
      subtitle="現状の課題ヒアリングと初期提案を無料で実施しています。"
      primaryText="無料相談を予約する"
      primaryHref="/contact"
      secondaryText="他のサービスを見る"
      secondaryHref="/services"
    />
  </main>
  <Footer />
</Layout>
