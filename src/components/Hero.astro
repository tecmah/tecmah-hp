---
// Hero Section - OpenAI風メインビジュアル
import { messages, company, caseStudies } from '../data/content.ts';
---

<section class="section-hero relative overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0 bg-gradient-to-r from-blue-400 to-purple-600"></div>
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.5) 1px, transparent 0); background-size: 40px 40px;"></div>
  </div>
  
  <div class="container relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Badge -->
      <div class="inline-flex items-center px-4 py-2 rounded-full bg-white/20 backdrop-blur-sm border border-white/30 text-white/90 text-sm font-medium mb-8">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
            {messages.hero.badge}
      </div>
      
      <!-- Main Heading -->
      <h1 class="text-5xl md:text-7xl font-bold text-white mb-6 leading-tight">
        {messages.hero.title.split('、')[0]}、
        <span class="gradient-text-secondary">生成AI</span>と<br>
        プロダクトマネジメントで<br>
        <span class="gradient-text">事業成長を加速</span>させます
      </h1>
      
      <!-- Subtitle -->
      <p class="text-xl md:text-2xl text-white/80 mb-8 max-w-3xl mx-auto leading-relaxed">
        {messages.hero.subtitle}
      </p>
      
      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href="/contact" class="btn btn-primary text-lg px-8 py-4 bg-white text-gray-900 hover:bg-gray-100 shadow-xl">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          {messages.cta.primary}
        </a>
        <a href="/services" class="btn btn-secondary text-lg px-8 py-4 bg-transparent text-white border-white hover:bg-white hover:text-gray-900">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
          {messages.cta.secondary}
        </a>
      </div>
      
      <!-- Trust Indicators -->
      <div class="mt-16 pt-8 border-t border-white/20">
        <p class="text-white/60 text-sm mb-4">これまでの支援実績</p>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-white/80">
          <div class="text-center">
            <div class="text-2xl font-bold">{messages.stats.continuationRate.value}</div>
            <div class="text-sm">{messages.stats.continuationRate.label}</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold">{messages.stats.leadTimeReduction.value}</div>
            <div class="text-sm">{messages.stats.leadTimeReduction.label}</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold">{messages.stats.pilotPeriod.value}</div>
            <div class="text-sm">{messages.stats.pilotPeriod.label}</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold">{messages.stats.investmentSupport.value}</div>
            <div class="text-sm">{messages.stats.investmentSupport.label}</div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 text-white/60">
    <div class="animate-bounce">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>

<style>
  .section-hero {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
  }
  
  /* アニメーション効果 */
  .section-hero h1 {
    animation: fadeInUp 1s ease-out;
  }
  
  .section-hero p {
    animation: fadeInUp 1s ease-out 0.2s both;
  }
  
  .section-hero .btn {
    animation: fadeInUp 1s ease-out 0.4s both;
  }
  
  /* Gradient text for light backgrounds */
  .gradient-text {
    background: linear-gradient(135deg, #10a37f 0%, #3b82f6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .gradient-text-secondary {
    background: linear-gradient(135deg, #8b5cf6 0%, #ec4899 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .section-hero h1 {
      font-size: 2.5rem;
      line-height: 1.2;
    }
    
    .section-hero p {
      font-size: 1.1rem;
    }
  }
</style>