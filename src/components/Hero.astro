---
// Hero Section - WebGL Fluid Simulation Background
import { messages, company, caseStudies } from "../data/content.ts";
import FluidBackground from "./FluidBackground.astro";
---

<section class="section-hero relative overflow-hidden">
  <!-- WebGL Fluid Background -->
  <FluidBackground />

  <!-- Dark overlay for better text readability -->
  <div class="absolute inset-0 bg-black/20 z-10"></div>

  <div class="container relative z-20">
    <div class="max-w-5xl mx-auto text-center">
      <!-- Badge -->
      <div
        class="inline-flex items-center px-6 py-3 rounded-full bg-white/10 backdrop-blur-md border border-white/20 text-white/90 text-sm font-medium mb-12 animate-fade-in-up"
      >
        <svg
          class="w-5 h-5 mr-3"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
        <span class="text-white/90 font-semibold">🚀 AI最先端企業</span>
      </div>

      <!-- Main Heading -->
      <h1
        class="text-6xl md:text-8xl font-black text-white mb-8 leading-tight animate-fade-in-up"
        style="animation-delay: 0.2s;"
      >
        <span class="block">次世代</span>
        <span class="gradient-text-ai">AI技術</span>で<br />
        <span class="block">ビジネスを</span>
        <span class="gradient-text-transform">変革</span>する
      </h1>

      <!-- Subtitle -->
      <p
        class="text-2xl md:text-3xl text-white/90 mb-12 max-w-4xl mx-auto leading-relaxed font-light animate-fade-in-up"
        style="animation-delay: 0.4s;"
      >
        生成AI、機械学習、データサイエンスの最先端技術で<br />
        あなたのビジネスを未来へ導きます
      </p>

      <!-- CTA Buttons -->
      <div
        class="flex flex-col sm:flex-row gap-6 justify-center items-center mb-16 animate-fade-in-up"
        style="animation-delay: 0.6s;"
      >
        <a
          href="/contact"
          class="group relative inline-flex items-center justify-center px-10 py-5 text-xl font-bold text-white bg-gradient-to-r from-blue-600 to-purple-600 rounded-full shadow-2xl hover:shadow-blue-500/25 transition-all duration-300 hover:scale-105 hover:from-blue-500 hover:to-purple-500"
        >
          <svg
            class="w-6 h-6 mr-3 group-hover:rotate-12 transition-transform duration-300"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          無料相談を開始
          <div
            class="absolute inset-0 rounded-full bg-gradient-to-r from-blue-400 to-purple-400 opacity-0 group-hover:opacity-20 transition-opacity duration-300"
          >
          </div>
        </a>
        <a
          href="/services"
          class="group inline-flex items-center justify-center px-10 py-5 text-xl font-bold text-white bg-transparent border-2 border-white/30 rounded-full hover:bg-white/10 hover:border-white/50 transition-all duration-300 hover:scale-105 backdrop-blur-sm"
        >
          <svg
            class="w-6 h-6 mr-3 group-hover:scale-110 transition-transform duration-300"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
            ></path>
          </svg>
          サービスを見る
        </a>
      </div>

      <!-- Trust Indicators -->
      <div
        class="mt-20 pt-12 border-t border-white/20 animate-fade-in-up"
        style="animation-delay: 0.8s;"
      >
        <p class="text-white/70 text-lg mb-8 font-medium">
          🚀 実績数字で見るTECMAHの力
        </p>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-white/90">
          <div class="text-center group">
            <div
              class="text-4xl md:text-5xl font-black mb-2 bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent group-hover:scale-110 transition-transform duration-300"
            >
              +18%
            </div>
            <div class="text-sm font-medium">学習継続率向上</div>
          </div>
          <div class="text-center group">
            <div
              class="text-4xl md:text-5xl font-black mb-2 bg-gradient-to-r from-green-400 to-blue-400 bg-clip-text text-transparent group-hover:scale-110 transition-transform duration-300"
            >
              50%
            </div>
            <div class="text-sm font-medium">判定時間短縮</div>
          </div>
          <div class="text-center group">
            <div
              class="text-4xl md:text-5xl font-black mb-2 bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent group-hover:scale-110 transition-transform duration-300"
            >
              3ヶ月
            </div>
            <div class="text-sm font-medium">パイロット完成</div>
          </div>
          <div class="text-center group">
            <div
              class="text-4xl md:text-5xl font-black mb-2 bg-gradient-to-r from-yellow-400 to-orange-400 bg-clip-text text-transparent group-hover:scale-110 transition-transform duration-300"
            >
              100%
            </div>
            <div class="text-sm font-medium">投資判断支援</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div
    class="absolute bottom-8 left-1/2 transform -translate-x-1/2 text-white/80 z-20"
  >
    <div class="animate-bounce">
      <div
        class="w-8 h-8 border-2 border-white/50 rounded-full flex items-center justify-center backdrop-blur-sm bg-white/10"
      >
        <svg
          class="w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </div>
    </div>
  </div>
</section>

<style>
  .section-hero {
    background: linear-gradient(135deg, #0f0f23 0%, #1a1a2e 50%, #16213e 100%);
    min-height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
  }

  /* アニメーション効果 */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 1s ease-out both;
  }

  /* AI技術のグラデーションテキスト */
  .gradient-text-ai {
    background: linear-gradient(135deg, #60a5fa 0%, #22d3ee 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    background-size: 200% 200%;
  }

  .gradient-text-transform {
    background: linear-gradient(135deg, #34d399 0%, #60a5fa 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    background-size: 200% 200%;
  }

  /* 過剰なグラデーションアニメーションを除去（静的へ） */

  /* ホバー効果 */
  .group:hover .group-hover\:scale-110 {
    transform: scale(1.1);
  }

  .group:hover .group-hover\:rotate-12 {
    transform: rotate(12deg);
  }

  .group:hover .group-hover\:scale-110 {
    transform: scale(1.1);
  }

  /* レスポンシブ調整 */
  @media (max-width: 768px) {
    .section-hero h1 {
      font-size: 3rem;
      line-height: 1.1;
    }

    .section-hero p {
      font-size: 1.2rem;
    }

    .section-hero .btn {
      font-size: 1rem;
      padding: 0.75rem 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .section-hero h1 {
      font-size: 2.5rem;
    }

    .section-hero p {
      font-size: 1rem;
    }
  }

  /* パフォーマンス最適化 */
  .section-hero * {
    will-change: transform;
  }

  /* テキストシャドウで可読性向上 */
  .section-hero h1 {
    text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  .section-hero p {
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
  }

  /* reduce-motion: グラデ/アニメ停止 */
  @media (prefers-reduced-motion: reduce) {
    .animate-fade-in-up {
      animation: none !important;
    }
  }
</style>
