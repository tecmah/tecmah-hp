---
// PageHero component - Stripe-inspired page header
interface Props {
  title: string;
  subtitle?: string;
  badge?: string;
  badgeIcon?: string;
  gradient?: 'primary' | 'secondary' | 'accent';
}

const { title, subtitle, badge, badgeIcon, gradient = 'primary' } = Astro.props;

const gradientClasses = {
  primary: 'from-primary to-secondary',
  secondary: 'from-secondary to-accent',
  accent: 'from-accent to-accent-secondary'
};
---

<section class="page-hero">
  <div class="hero-bg"></div>
  <div class="hero-grid"></div>
  <div class="hero-orbs">
    <div class="orb orb-1"></div>
    <div class="orb orb-2"></div>
  </div>

  <div class="container">
    <div class="hero-content">
      {badge && (
        <div class="hero-badge">
          {badgeIcon && <span class="badge-icon" set:html={badgeIcon} />}
          <span>{badge}</span>
        </div>
      )}

      <h1 class="hero-title" set:html={title} />

      {subtitle && (
        <p class="hero-subtitle" set:html={subtitle} />
      )}
    </div>
  </div>
</section>

<style>
  .page-hero {
    position: relative;
    padding: 10rem 0 6rem;
    overflow: hidden;
    background: var(--background);
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 80% 50% at 50% -20%, rgba(99, 91, 255, 0.2), transparent),
      radial-gradient(ellipse 60% 40% at 100% 50%, rgba(0, 212, 170, 0.15), transparent);
    pointer-events: none;
  }

  .hero-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(99, 91, 255, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(99, 91, 255, 0.03) 1px, transparent 1px);
    background-size: 60px 60px;
    pointer-events: none;
  }

  .hero-orbs {
    position: absolute;
    inset: 0;
    overflow: hidden;
    pointer-events: none;
  }

  .orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.3;
  }

  .orb-1 {
    width: 300px;
    height: 300px;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    top: -10%;
    right: 10%;
  }

  .orb-2 {
    width: 200px;
    height: 200px;
    background: linear-gradient(135deg, var(--secondary), var(--accent));
    bottom: 10%;
    left: 5%;
  }

  .hero-content {
    position: relative;
    z-index: 10;
    max-width: 56rem;
    margin: 0 auto;
    text-align: center;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1.25rem;
    background: rgba(99, 91, 255, 0.1);
    border: 1px solid rgba(99, 91, 255, 0.3);
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--secondary);
    margin-bottom: 2rem;
  }

  .badge-icon {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .badge-icon :global(svg) {
    width: 1rem;
    height: 1rem;
  }

  .hero-title {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 800;
    line-height: 1.1;
    color: var(--text);
    margin-bottom: 1.5rem;
    letter-spacing: -0.03em;
  }

  .hero-title :global(.gradient-text) {
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: clamp(1.125rem, 2vw, 1.5rem);
    color: var(--text-secondary);
    line-height: 1.7;
    max-width: 42rem;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .page-hero {
      padding: 8rem 0 4rem;
    }
  }
</style>
