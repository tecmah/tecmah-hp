---
// WebGL Fluid Simulation Background - TECMAH Branding
---

<div id="fluid-container" class="fluid-background">
  <canvas id="fluid-canvas"></canvas>
</div>

<!-- Defer ensures that DOM (including #fluid-canvas) is ready when fluid simulation initializes -->
<script is:inline src="/fluid-simulation.js" defer></script>

<style>
  .fluid-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    overflow: hidden;
    /* Container should not block events, allowing content above to be clickable */
    pointer-events: none;
  }

  #fluid-canvas {
    width: 100%;
    height: 100%;
    display: block;
    /* Canvas receives pointer events for interactive fluid simulation */
    pointer-events: auto;
  }

  /* Performance optimizations */
  #fluid-canvas {
    image-rendering: optimizeSpeed;
    image-rendering: -moz-crisp-edges;
    image-rendering: -webkit-optimize-contrast;
    image-rendering: optimize-contrast;
    -ms-interpolation-mode: nearest-neighbor;
  }

  /* Mobile optimizations */
  @media (max-width: 768px) {
    .fluid-background {
      filter: brightness(0.8);
    }
  }

  /* Reduce motion for users who prefer it */
  @media (prefers-reduced-motion: reduce) {
    .fluid-background {
      display: none;
    }
  }
</style>
